pipeline {
    agent any
    stages {
        stage('Build') {
            when {
                changeset "api/**"
            }
            steps{
                sh '''
                    #!/bin/bash

                    export PATH="$PATH:/usr/local/go/bin"

                    go version

                    go build -o demo .

                    ./demo    
                '''
            }
        }
    }
    post {
        always {
            sh '''
                #!/bin/bash
                echo "current status: ${currentBuild.currentResult}"
            '''
        }
    }
}
